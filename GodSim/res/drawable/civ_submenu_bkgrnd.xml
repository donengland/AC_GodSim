    android:orientation="horizontal" 
    android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
    
    <stroke
	    android:width="2dp"
	    android:color="#00000000" />
    <gradient
        android:startColor="#34343434"
        android:endColor="#17171717"
        android:angle="270" /> 
    <corners
	    android:radius="7dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    
</shape>
